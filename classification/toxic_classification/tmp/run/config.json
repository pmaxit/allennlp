{
    "dataset_reader": {
        "type": "toxic",
        "max_count": 1000,
        "max_sequence_length": 5000,
        "token_indexers": {
            "characters": {
                "type": "characters",
                "min_padding_length": 3
            },
            "tokens": {
                "type": "single_id",
                "lowercase_tokens": true
            }
        }
    },
    "model": {
        "type": "toxic",
        "classifier_feedforward": {
            "activations": [
                "tanh",
                "linear"
            ],
            "dropout": [
                0.2,
                0
            ],
            "hidden_dims": [
                200,
                6
            ],
            "input_dim": 562,
            "num_layers": 2
        },
        "encoder": {
            "type": "bag_of_embeddings",
            "embedding_dim": 562
        },
        "text_field_embedder": {
            "token_embedders": {
                "characters": {
                    "type": "character_encoding",
                    "embedding": {
                        "embedding_dim": 16
                    },
                    "encoder": {
                        "type": "cnn-highway",
                        "activation": "relu",
                        "do_layer_norm": true,
                        "embedding_dim": 16,
                        "filters": [
                            [
                                1,
                                16
                            ],
                            [
                                2,
                                16
                            ],
                            [
                                3,
                                32
                            ],
                            [
                                4,
                                32
                            ],
                            [
                                5,
                                64
                            ],
                            [
                                6,
                                64
                            ],
                            [
                                7,
                                128
                            ]
                        ],
                        "num_highway": 2,
                        "projection_dim": 512,
                        "projection_location": "after_highway"
                    }
                },
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 50,
                    "trainable": true
                }
            }
        }
    },
    "train_data_path": "./data/train.csv",
    "trainer": {
        "cuda_device": -1,
        "grad_clipping": 5,
        "num_epochs": 40,
        "num_gradient_accumulation_steps": 1,
        "optimizer": {
            "type": "adadelta",
            "lr": 1,
            "rho": 0.95
        },
        "patience": 3
    },
    "vocabulary": {
        "type": "from_files",
        "directory": "/home/jovyan/project/classification/toxic_classification/tmp/vocab.tar.gz"
    },
    "data_loader": {
        "batch_size": 32
    }
}